    <script>
        // å¤åˆ¶é“¾æ¥åŠŸèƒ½
        function copyLink() {
            const linkText = document.getElementById('publicLink').innerText;
            navigator.clipboard.writeText(linkText).then(() => {
                alert('âœ… ç½‘é¡µé“¾æ¥å¤åˆ¶æˆåŠŸï¼');
            }).catch(() => {
                const textArea = document.createElement('textarea');
                textArea.value = linkText;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                alert('âœ… ç½‘é¡µé“¾æ¥å¤åˆ¶æˆåŠŸï¼');
            });
        }

        // åŠ¨æ€æ—¥æœŸ/å€’è®¡æ—¶é€»è¾‘
        const festivals = [{name:"2026å¹´å…ƒæ—¦",month:1,day:1,emoji:"ğŸ†"},{name:"2026å¹´æ˜¥èŠ‚ï¼ˆé™¤å¤•ï¼‰",month:2,day:17,emoji:"ğŸ§§"},{name:"2026å¹´æ¸…æ˜èŠ‚",month:4,day:5,emoji:"ğŸŒ¿"},{name:"2026å¹´åŠ³åŠ¨èŠ‚",month:5,day:1,emoji:"ğŸ—ï¸"},{name:"2026å¹´ç«¯åˆèŠ‚",month:6,day:19,emoji:"ğŸ™"},{name:"2026å¹´ä¸­ç§‹èŠ‚",month:9,day:25,emoji:"ğŸ¥®"},{name:"2026å¹´å›½åº†èŠ‚",month:10,day:1,emoji:"ğŸ‡¨ğŸ‡³"}];
        const today = new Date();
        
        function getDaysDiff(date1, date2) {
            const oneDay = 24 * 60 * 60 * 1000;
            return Math.floor(Math.abs(date1 - date2) / oneDay);
        }

        function renderCurrentDate() {
            const year = today.getFullYear();
            const month = String(today.getMonth() + 1).padStart(2, '0');
            const day = String(today.getDate()).padStart(2, '0');
            document.getElementById('currentDate').innerText = `ä»Šæ—¥æ—¥æœŸï¼š${year}å¹´${month}æœˆ${day}æ—¥`;
        }

        function renderWeekendTip() {
            const weekday = today.getDay();
            let tipText = weekday === 6 ? "âœ¨ ä»Šå¤©å°±æ˜¯å‘¨å…­ï¼Œå·²å¼€å¯æ”¾å‡æ¨¡å¼ğŸ‰" : weekday === 0 ? "âœ¨ ä»Šå¤©æ˜¯å‘¨æ—¥ï¼Œç»§ç»­å¿«ä¹æ”¾å‡âœ¨" : `âœ¨ è·ç¦»æœ¬å‘¨å…­æ”¾å‡è¿˜æœ‰ ${6 - weekday} å¤©`;
            document.getElementById('weekendTip').innerText = tipText;
        }

        function renderMonthEndTip() {
            const lastDay = new Date(today.getFullYear(), today.getMonth() + 1, 0).getDate();
            const daysLeft = getDaysDiff(today, new Date(today.getFullYear(), today.getMonth(), lastDay));
            document.getElementById('monthEndTip').innerText = `ğŸ“† è·ç¦»æœ¬æœˆç»“æŸè¿˜æœ‰ ${daysLeft} å¤©`;
        }

        function renderFestivals() {
            const listEl = document.getElementById('festivalList');
            listEl.innerHTML = '';
            festivals.forEach(fes => {
                const festivalDate = new Date(today.getFullYear(), fes.month - 1, fes.day);
                let daysText = festivalDate > today ? `è¿˜æœ‰ ${getDaysDiff(today, festivalDate)} å¤©` : (festivalDate.toDateString() === today.toDateString() ? "ä»Šå¤©å°±æ˜¯èŠ‚æ—¥ï¼ğŸ‡" : `å·²ç»æ¸¡è¿‡äº†æ„‰å¿«çš„${fes.name}`);
                let cssClass = festivalDate > today ? "not-yet" : (festivalDate.toDateString() === today.toDateString() ? "today" : "passed");
                const li = document.createElement('li');
                li.innerHTML = `<span class="name">${fes.emoji} ${fes.name}</span><span class="days ${cssClass}">${daysText}</span>`;
                listEl.appendChild(li);
            });
        }

        window.onload = function() {
            renderCurrentDate();
            renderWeekendTip();
            renderMonthEndTip();
            renderFestivals();
        }
